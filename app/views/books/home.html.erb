<%if !flash[:notice].blank? %>
  <div class= "notice">
    <%= flash[:notice] %>
    </div>
<% end %>
<div class="subjects index">
  <h2>Home of Book Collection</h2>

  <%= link_to("Add New Book", new_book_path, :class => 'action add') %>

  <table class="listing" summary="Book list">
    <tr class="header">
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Published Date</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td><%= book.price %></td>
      <td><%= book.published_date %></td>
      <td class="actions">
        <%= link_to("Show", book_path(book), :class => 'action show') %>
        <%= link_to("Update", edit_book_path(book), :class => 'action update') %>
        <%= link_to("Delete", delete_book_path(book), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>


